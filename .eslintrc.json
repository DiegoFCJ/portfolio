{
  "root": true,
  "ignorePatterns": [
    "dist/**/*",
    "node_modules/**/*",
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": ["*.ts"],
      "excludedFiles": ["**/*.spec.ts"],
      "parserOptions": {
        "project": ["./tsconfig.eslint.json"]
      },
      "extends": [
        "plugin:@angular-eslint/ng-cli-compat",
        "plugin:@angular-eslint/ng-cli-compat--formatting-add-on"
      ],
      "rules": {}
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {}
    }
  ]
}
